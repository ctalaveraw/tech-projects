// This will be my first DevOps Jenkins  CI/CD pipeline
// The configuration file will be in 'declarative' style
pipeline {

    agent any

    stages { // Each pipeline must have their stages declared.
        stage("build") {
            
            steps {
                echo "This is the build stage"
            }
        }

    stage("test") {
            
            steps {
                echo "This is the test stage"
            }
        }

    stage("deploy") {
            
            steps {
                echo "This is the deploy stage"
            }
        }    
    }
    
}